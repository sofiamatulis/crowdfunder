<h2> Log in</h2>

<body class = "log-in">
  <div class="log-in-form">

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br/>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br/>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in", class: 'btn btn-default' %></div>

</div>
</body>
<% end %>
